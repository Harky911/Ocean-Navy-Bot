{
  "name": "ocean-navy-bot",
  "version": "1.0.0",
  "description": "OCEAN DEX buy alerts for Telegram with interactive configuration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ocean-navy-bot",
    "pm2:restart": "pm2 restart ocean-navy-bot",
    "pm2:delete": "pm2 delete ocean-navy-bot",
    "pm2:logs": "pm2 logs ocean-navy-bot",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "ocean",
    "dex",
    "telegram",
    "bot",
    "ethereum",
    "uniswap",
    "balancer"
  ],
  "author": "Ocean Navy",
  "license": "MIT",
  "dependencies": {
