    "ethers": "^6.13.4",
    "express": "^4.19.2",
    "lru-cache": "^10.2.0",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "pm2": "^5.3.1",
    "rss-parser": "^3.13.0",
    "viem": "^2.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/node-telegram-bot-api": "^0.64.7",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
