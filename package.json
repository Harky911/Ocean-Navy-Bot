{
  "name": "ocean-navy-bot",
  "version": "1.0.0",
  "description": "OCEAN DEX buy alerts for Telegram with interactive configuration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ocean-navy-bot",
    "pm2:restart": "pm2 restart ocean-navy-bot",
    "pm2:delete": "pm2 delete ocean-navy-bot",
    "pm2:logs": "pm2 logs ocean-navy-bot",
    "pm2:monit": "pm2 monit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "ocean",
    "dex",
    "telegram",
    "bot",
    "ethereum",
    "uniswap",
    "balancer"
  ],
  "author": "Ocean Navy",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "lru-cache": "^10.2.0",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "pm2": "^5.3.1",
    "viem": "^2.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
